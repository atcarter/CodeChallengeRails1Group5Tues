<%= form_with model: @party do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name%>

    <%= f.label :date%>
    <%= f.datetime_field :date%>

    <%= f.label :budget%>
    <%= f.number_field :budget%>

    <h3><%= f.collection_select :category_id, Category.all, :id, :name %></h3>

    <h2>Create New Categories!</h2>
    <%= f.fields_for :category do |c| %>
        <%= c.label :name %>
        <%= c.text_field :name %>

    <% end %>

    <%=f.submit%>
    <%end%>